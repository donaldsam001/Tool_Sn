{
  "manifest_version": 3,
  "name": "Ai2 Web Task Annotation Tool",
  "version": "1.2.0",
  "minimum_chrome_version": "116",
  "description": "",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "incognito": "spanning",
  "content_scripts": [
    {
      "js": ["scripts/content/session-starter.js"],
      "matches": [
        "http://localhost:5000/*",
        "http://localhost:5001/*",
        "http://ec2-54-214-217-120.us-west-2.compute.amazonaws.com/*",
        "http://ec2-34-220-199-116.us-west-2.compute.amazonaws.com/*",
        "https://webolmo-data.allen.ai/*",
        "https://webolmo-data-upwork.allen.ai/*",
        "https://webolmo-data-snorkel.allen.ai/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/worker/worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open and start recording"
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "debugger",
    "downloads",
    "offscreen",
    "pageCapture",
    "scripting",
    "sidePanel",
    "storage",
    "tabCapture",
    "tabGroups",
    "tabs",
    "windows",
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>"],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Disabled",
      "keyword": "disabled",
      "search_url": "http://localhost/",
      "favicon_url": "http://localhost/favicon.ico",
      "is_default": true,
      "encoding": "UTF-8"
    }
  },
  "side_panel": {
    "default_path": "side-panel/side-panel.html"
  },
  "commands": {
    "take_screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+Period",
        "mac": "Command+Shift+Period"
      },
      "description": "Take a screenshot"
    }
  }
}
